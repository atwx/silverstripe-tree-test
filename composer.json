{
    "name": "silverstripe/installer",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer",
    "license": "BSD-3-Clause",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:atwx/silverstripe-admin.git"
        }
    ],
    "require": {
        "php": "^8.3",
        "silverstripe/recipe-plugin": "^2",
        "silverstripe/vendor-plugin": "^3",
        "silverstripe/recipe-cms": "^6.x-dev",
        "silverstripe/cms": "6.x-dev",
        "silverstripe/startup-theme": "~1.0.11@stable",
        "silverstripe/login-forms": "^6.1",
        "silverstripe/htmleditor-tinymce": "~1.0.2@stable",
        "silverstripe/admin": "dev-fixes/fix-large-dropdowntree as 3.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3",
        "dnadesign/silverstripe-populate": "^4.0"
    },

    "extra": {
        "project-files": [
            "app/_config/*",
            ".env.example",
            ".graphql-generated/*"
        ],
        "public-files": [
            "assets/*",
            "favicon.ico"
        ],
        "project-files-installed": [
            ".htaccess",
            "app/.htaccess",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "config": {
        "process-timeout": 600,
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        },
        "preferred-install": {
            "silverstripe/admin": "source",
            "silverstripe/cms": "source",
            "*": "dist"
        }
    },

    "prefer-stable": true,
    "minimum-stability": "dev"
}
